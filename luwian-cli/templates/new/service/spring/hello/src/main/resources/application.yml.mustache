server:
  port: {{httpPort}}

management:
  endpoints:
    web:
      exposure:
        include: health,info,prometheus
  endpoint:
    health:
      probes:
        enabled: true

# Luwian defaults: safe & observable out of the box
luwian:
  logging:
    json: true          # set to true only if logstash encoder is on classpath
    http:
      body: false       # keep off in prod; flip on locally if needed
  metrics:
    enabled: true       # actuator prometheus exposed when configured
  tracing:
    enabled: true       # no-op unless OTel on classpath and configured
  error:
    include-stacktrace: on-trace  # add detail when there's a correlation/trace

# Optional: if you include the logstash encoder, you can add a minimal logback config:
# (uncomment the file below and include the encoder dependency)
# See: src/main/resources/logback-spring.xml
