<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>{{pkg}}</groupId>
  <artifactId>{{service}}</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <name>{{service}}</name>
  <properties>
    <maven.compiler.release>21</maven.compiler.release>
    <!-- Pin Luwian version once you publish -->
    <luwian.version>0.1.0-SNAPSHOT</luwian.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-actuator</artifactId>
    </dependency>
    <!-- Luwian starter: logging, error handler, (metrics/tracing when enabled) -->
    <dependency>
      <groupId>io.luwian</groupId>
      <artifactId>luwian-starter-spring</artifactId>
      <version>${luwian.version}</version>
    </dependency>

    <!-- Optional: JSON logs (Logback encoder). Remove if you don't want JSON by default. -->
    <!--
    <dependency>
      <groupId>net.logstash.logback</groupId>
      <artifactId>logstash-logback-encoder</artifactId>
      <version>7.4</version>
    </dependency>
    -->
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
